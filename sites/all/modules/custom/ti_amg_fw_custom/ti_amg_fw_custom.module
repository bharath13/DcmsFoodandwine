        $query_term->condition('ttd.name', $taxo_term_name, '=');
        $query_term->condition('ttd.vid', $vid, '=');
        $result_term = $query_term->execute();
        $existing_term_data = $result_term->fetchAssoc();
        $term_name = $existing_term_data['name'];
        if ($term_tid > 0) {
